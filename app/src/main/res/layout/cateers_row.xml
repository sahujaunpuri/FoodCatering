<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_height="72dp">
        
        <TextView
            android:id="@+id/CateerName"
            android:layout_width="wrap_content"
            android:text="Name of Cateer"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CateerSpecial"
            android:layout_width="wrap_content"
            android:text="Specialization"
            android:layout_below="@id/CateerName"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CateerRate"
            android:layout_width="wrap_content"
            android:text="500 Per Plate"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#404040"
            android:layout_height="wrap_content" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/CateerRating"
            android:padding="4dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Rate: 3.5"
            android:textSize="14sp"
            android:background="#4CAF50"/>

    </RelativeLayout>
</LinearLayout>
