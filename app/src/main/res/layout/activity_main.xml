<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context="pradeet.foodcatering.MainActivity">

    <LinearLayout
        android:id="@+id/LoginActButns"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <Button
            android:id="@+id/SignUp"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="#BC000000"
            android:text="SIGN UP"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/Login"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#BC000000"
            android:text="LOGIN"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LoginActHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:layout_above="@id/LoginActButns"
        android:background="#BC000000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SIGN UP. YOU KNOW U WANT TO"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="It will take less than 5 seconds"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:padding="12dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#395996"
                android:text="facebook"
                android:layout_marginRight="6dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:background="#dc4b38"
                android:text="google"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@id/LoginActHint"
        android:gravity="center"
        android:layout_height="fill_parent">
        <ImageView
            android:padding="60dp"
            android:background="#47000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo_new" />
    </RelativeLayout>



</RelativeLayout>
